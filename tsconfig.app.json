{
  "include": [
    "env.d.ts",
    "package.json",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.tsx",
    "src/**/*.json",
    "public/*"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "build",
    "allowJs": true,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
